<Page x:Class="FortressWar.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FortressWar"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="MenuPage">
    <Grid Width="1600" Height="900" Background="#78503f">
        <Label x:Name="label" Content="FortressWar" HorizontalAlignment="Left" Margin="274,100,0,0" VerticalAlignment="Top" Foreground="White" FontSize="200" Height="300"/>
        <Button Click="Button_Click" Width="300" Height="100" Margin="650,400" Background="#563020" Foreground="White" FontSize="50" BorderThickness="0">START</Button>
        <Button Click="Button_Load" Width="300" Height="100" Margin="650,550,650,250" Background="#563020" Foreground="White" FontSize="50" BorderThickness="0">LOAD</Button>
        <Button Click="Button_Close" Width="300" Height="100" Margin="650,700,650,100" Background="#563020" Foreground="White" FontSize="50" BorderThickness="0">EXIT</Button>
    </Grid>
</Page>
